{
  "name": "ts-fast-universal",
  "version": "0.0.0",
  "description": "Boilerplate for building npm packages in TypeScript",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --project ./tsconfig.build.json",
    "check": "tsc",
    "ci": "npm run check && npm run test && npm run build",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublish": "npm run ci"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.2"
  }
}
